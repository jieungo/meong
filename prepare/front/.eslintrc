{
    "parser": "babel-eslint", //바벨이 코드를 해석해서 최신문법에 에러 발생하지 않는다
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "extends": [
        "airbnb"
    ],

    "plugins": [
        "impot",
        "react-hooks"
    ],

    "rules": {
        "linebreak-style": 0,
        "jsx-a11y/label-has-associated-control": "off",
        "jsx-a11y/anchor-is-valid": "off",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "react/forbid-prop-types": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-one-expression-per-line": "off",
        "object-curly-newline": "off",
        "no-undef": "error"
    }
}